<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button1" android:layout_centerInParent = "true"  android:text="HELP" android:height="100dp" android:width="100dp" android:src="@drawable/helpbtn" android:onClick="ImgButton_OnClick"></ImageButton>
    <Button android:id="@+id/button2" android:layout_width="wrap_content" android:layout_alignParentBottom="true"  android:layout_centerInParent="true" android:layout_height="wrap_content" android:text="Add MobileNos" android:onClick="addmobile_click" android:width="300dp"></Button>
    <Button android:id="@+id/button3" android:layout_width="wrap_content" android:layout_above="@+id/button2"   android:layout_centerInParent="true" android:layout_height="wrap_content" android:text="Quit App" android:onClick="quitapp_click" android:width="300dp"></Button>
    
    
</RelativeLayout>
